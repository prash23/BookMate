<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prashanth.bookmate.activities.DisplayBooks">

    <ImageView
        android:id="@+id/summaryPhoto"
        android:layout_width="385dp"
        android:layout_height="185dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:fadingEdgeLength="10dp"
        android:padding="10dp"
        android:src="@drawable/no_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999"/>

    <TextView
        android:id="@+id/summaryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Book Name:"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.03"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/summaryPhoto"
        app:layout_constraintVertical_bias="0.00999999"/>
    <TextView
        android:text="Author :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryAuthor"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/summaryName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.03"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/summaryDescription"
        app:layout_constraintVertical_bias="0.52"/>
    <TextView
        android:text="Description :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryDescription"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/summaryGenre"
        app:layout_constraintHorizontal_bias="0.03"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/summaryPhoto"
        app:layout_constraintVertical_bias="0.82"/>
    <TextView
        android:text="Contact Number :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryContact"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/summaryPhoto"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/summaryZipCode"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.92"
        app:layout_constraintHorizontal_bias="0.03"/>
    <TextView
        android:text="Price :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryPrice"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/summaryPhoto"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/summaryContact"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.89"
        app:layout_constraintHorizontal_bias="0.03"/>
    <TextView
        android:text="Genre :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryGenre"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/summaryPhoto"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/summaryPrice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.86"
        app:layout_constraintHorizontal_bias="0.03"/>

    <TextView
        android:id="@+id/summaryZipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ZipCode :"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summaryPhoto"
        app:layout_constraintVertical_bias="0.92"
        tools:layout_editor_absoluteY="461dp"/>
</android.support.constraint.ConstraintLayout>
